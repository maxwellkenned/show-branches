{
  "name": "show-branches",
  "description": "Mostrar as branchs dos projetos Vox",
  "version": "1.0.10",
  "homepage": "https://github.com/maxwellkenned/show-branches",
  "repository": "https://github.com/maxwellkenned/show-branches",
  "author": {
    "name": "Maxwell Kenned",
    "email": "kenned123@gmail.com",
    "url": "https://maxwellkenned.com.br"
  },
  "main": "src/main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "cp .env.exemple .env && electron-builder install-app-deps"
  },
  "build": {
    "appId": "show-branches",
    "productName": "Show branches",
    "directories": {
      "app": "./",
      "output": "./releases/download",
      "buildResources": "./assets"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons",
      "category": "Utility",
      "files": [
        "**/*",
        "assets/**",
        "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
        "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
        "!**/node_modules/*.d.ts",
        "!**/node_modules/.bin",
        "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
        "!.editorconfig",
        "!**/._*",
        "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
        "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
        "!**/{appveyor.yml,.travis.yml,circle.yml}",
        "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
      ],
      "desktop": {
        "Encoding": "UTF-8"
      }
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "electron": "^9.4.0",
    "electron-builder": "^21.2.0"
  }
}
